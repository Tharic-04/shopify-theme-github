<!-- View All Coupons Button -->
<button id="view-all-coupons" class="coupon-btn">View All Coupons</button>

<!-- Coupon Popup -->
<div id="coupon-popup" class="popup-overlay">
  <div class="popup-content">
    <button class="close-btn">&times;</button>
    <h3>Apply Coupon</h3>
    <p>Your cart: ₹{{ cart.total_price | money_without_currency }}</p>
    
    <div class="coupon-input">
      <input type="text" placeholder="Enter Coupon Code">
      <button>Apply</button>
    </div>

    <h4>Applied Coupon</h4>
    <div class="coupon-card applied">
      <span class="coupon-tag">BUY 1 GET 1</span>
      <div class="coupon-details">
        <strong>BUY1GET1</strong> <span class="remove-coupon">REMOVE</span>
        <p>Save ₹80 on this order!</p>
        <p>Add 2 'Buy 1 Get 1' items to get 1 item free</p>
        <a href="#">+ MORE</a>
      </div>
    </div>

    <h4>Great deal you’re missing out on!</h4>
    <div class="coupon-card">
      <span class="coupon-tag">20% OFF</span>
      <div class="coupon-details">
        <strong>TRYNEW</strong> <button class="apply-btn">APPLY</button>
        <p>Add ₹18 more to get a discount up to ₹50</p>
        <p>Use code TRYNEW & get 20% off on orders above ₹179. Max discount: ₹50.</p>
        <a href="#">+ MORE</a>
      </div>
    </div>

    <h4>More Offers</h4>
    <div class="coupon-card">
      <span class="coupon-tag">FLAT 80</span>
      <div class="coupon-details">
        <strong>FLAT80</strong> <button class="apply-btn">APPLY</button>
        <p>Add ₹338 more to avail this offer</p>
        <a href="#">+ MORE</a>
      </div>
    </div>
  </div>
</div>

<!-- CSS for Popup Styling -->
<style>
  .coupon-btn {
    padding: 12px 18px;
    background: #ff5722;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    font-size: 16px;
    display: block;
    margin: 10px auto;
  }
  
  .popup-overlay {
    display: none;
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9999;
    justify-content: center;
    align-items: center;
    overflow-y: auto;
  }

  .popup-content {
    background: white;
    width: 90%;
    max-width: 400px;
    padding: 20px;
    border-radius: 10px;
    position: relative;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    max-height: 90vh; /* Prevents it from overflowing */
    overflow-y: auto;
  }

  .close-btn {
    position: absolute;
    top: 10px; 
    right: 10px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #333;
  }

  .coupon-card {
    display: flex;
    background: #f8f8f8;
    margin: 10px 0;
    border-radius: 8px;
    overflow: hidden;
    flex-direction: row;
  }

  .coupon-tag {
    background: #ff5722;
    color: white;
    padding: 10px;
    writing-mode: vertical-lr;
    text-align: center;
    font-weight: bold;
  }

  .coupon-details {
    padding: 10px;
    flex: 1;
    position: relative;
  }

  .apply-btn {
    padding: 6px 12px;
    background: green;
    color: white;
    border: none;
    cursor: pointer;
    float: right;
    border-radius: 5px;
  }

  .remove-coupon {
    color: red;
    cursor: pointer;
    float: right;
    font-size: 14px;
  }

  .coupon-input {
    display: flex;
    margin-bottom: 15px;
  }

  .coupon-input input {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px 0 0 5px;
  }

  .coupon-input button {
    padding: 10px 15px;
    background: #007aff;
    color: white;
    border: none;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
  }
  .coupon-details p , .coupon-details strong{
    color: #000000;
  }

  /* Ensure the popup doesn’t overflow */
  @media screen and (max-height: 600px) {
    .popup-content {
      max-height: 80vh;
    }
  }
</style>

<!-- JavaScript for Popup Functionality -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var popup = document.getElementById("coupon-popup");
    var openBtn = document.getElementById("view-all-coupons");
    var closeBtn = document.querySelector(".close-btn");

    openBtn.addEventListener("click", function() {
      popup.style.display = "flex";
    });

    closeBtn.addEventListener("click", function() {
      popup.style.display = "none";
    });

    window.addEventListener("click", function(event) {
      if (event.target === popup) {
        popup.style.display = "none";
      }
    });
  });
</script>
