        },
        {
          "value": "half",
          "label": "t:sections.multicolumn-with-collapsible.settings.image_width.options__2.label"
        },
        {
          "value": "full",
          "label": "t:sections.multicolumn-with-collapsible.settings.image_width.options__3.label"
        }
      ],
      "default": "full",
      "label": "t:sections.multicolumn-with-collapsible.settings.image_width.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.multicolumn-with-collapsible.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.multicolumn-with-collapsible.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.multicolumn-with-collapsible.settings.image_ratio.options__3.label"
        },
