      "default": 3,
      "label": "t:sections.multicolumn-with-collapsible.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.multicolumn-with-collapsible.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.multicolumn-with-collapsible.settings.column_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.multicolumn-with-collapsible.settings.column_alignment.label"
    },
    {
      "type": "select",
      "id": "background_style",
      "options": [
