       {
      "type": "collapsible_row",
      "name": "t:sections.collapsible_content.blocks.collapsible_row.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
            {
      "type": "checkbox",
      "id": "enable_collapsible_content",
      "default": true,
      "label": "t:sections.multicolumn-with-collapsible.blocks.multicolumn_collapsible.settings.enable_collapsible_content.label"
    },
        {
          "type": "text",
          "id": "heading",
          "default": "Collapsible row",
          "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.label",
          "info": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.info"
        },
        {
          "type": "image_picker",
          "id": "before_image",
          "label": "t:sections.multicolumn.blocks.column.settings.before_image.label"
        },
        {
          "type": "richtext",
          "id": "row_content",
