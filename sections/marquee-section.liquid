{%- style -%}
     .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }
   @media screen and (min-width: 576px) and (max-width: 749px){
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .bss-marquee-bar.bss-messages{    
  position: relative;
  overflow: hidden;
  display: flex;
}
.bss-marquee-bar .bss-message{
    text-align: center;
    padding: 0px 0%;
    display: flex;
    font-size: 66px;
    text-transform: capitalize;
    margin: 0;
    white-space: nowrap;
    letter-spacing: 2px;
  margin-right: -10px;
}
  .bss-marquee-bar h2:nth-child(2){
    justify-content: start;
  }
.bss-marquee-bar h2:nth-child(2){
  font-size: 90px;
  margin-left: 250px;
  justify-content: center;
}
  .bss-marquee-bar h2:nth-child(3){
  font-size: 90px;
  justify-content: right;
}
.bss-marquee-bar h2:nth-child(1) , .bss-marquee-bar h2:nth-child(3){
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #ffffff;
    color: transparent;
    opacity: 0.5;
}

@media (max-width: 749px){
  .bss-marquee-bar .bss-message{
    font-size: 36px;
  }
  .bss-marquee-bar h2:nth-child(2){
  font-size: 46px;
}
}
{%- endstyle -%}

{%- if  section.blocks.size > 0 and section.settings.show_marquee_bar -%}
  <div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} gradient{% if section.settings.title == blank %} no-heading{% endif %} {{ section.settings.custom_class_name }}">
<div class="bss-marquee-bar bss-messages ">
  <marquee width="100%" scrollamount="{{ section.settings.speed }}" direction="{{ section.settings.direction }}" {% if section.settings.pause_on_hover %}onmouseover="this.stop();" onmouseout="this.start();"{% endif %}>
  {%- for block in section.blocks -%}
  <h2 class="bss-message">{{ block.settings.message }}</h2>
  {%- endfor -%}
  </marquee>
</div>
  </div>
{%- endif -%}
{% schema %}
{
  "name": "t:sections.marquee-section.name",
  "settings": [
     {
      "type": "inline_richtext",
      "id": "title",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
          "type": "text",
          "id": "span_text",
          "label": "t:sections.multicolumn.settings.span_text.label"
     },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.multicolumn.settings.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.multicolumn.settings.button_link.label"
    },
    {
      "type": "checkbox",
      "id": "show_marquee_bar",
      "label": "t:sections.marquee-section.settings.title.label"
    },
    {
      "type": "select",
      "id": "direction",
      "options": [
        {
          "value": "left",
          "label": "t:sections.marquee-section.settings.right_to_left.label"
        },
        {
          "value": "right",
          "label": "t:sections.marquee-section.settings.left_to_right.label"
        }
      ],
      "default": "right",
      "label": "t:sections.marquee-section.settings.direction.label"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "t:sections.marquee-section.settings.pause_on_hover.label"
    },    
    {
      "type": "text",
      "id": "speed",
      "label": "t:sections.marquee-section.settings.speed.label",
      "default": "15"
    },
     {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
],
"blocks": [
    {
      "type": "header",
      "name": "Message",
      "settings": [
          {
            "id": "message",
            "type": "textarea",
           "label": "t:sections.marquee-section.blocks.icon.settings.message.label"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.marquee-section.presets.name"
    }
  ]
}
{% endschema %}