        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
     {
          "type": "text",
          "id": "span_text",
          "label": "t:sections.multicolumn.settings.span_text.label"
     },
    {
      "type": "select",
      "id": "desktop_layout",
      "options": [
        {
          "value": "left",
          "label": "t:sections.collage-with-video.settings.desktop_layout.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.collage-with-video.settings.desktop_layout.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.collage-with-video.settings.desktop_layout.label"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "options": [
        {
          "value": "collage",
          "label": "t:sections.collage-with-video.settings.mobile_layout.options__1.label"
        },
        {
          "value": "column",
          "label": "t:sections.collage-with-video.settings.mobile_layout.options__2.label"
        }
      ],
      "default": "column",
      "label": "t:sections.collage-with-video.settings.mobile_layout.label"
    },
    {
      "type": "select",
      "id": "card_styles",
      "options": [
        {
          "value": "none",
          "label": "t:sections.collage-with-video.settings.card_styles.options__1.label"
        },
        {
          "value": "product-card-wrapper",
          "label": "t:sections.collage-with-video.settings.card_styles.options__2.label"
        }
      ],
      "default": "product-card-wrapper",
      "info": "t:sections.collage-with-video.settings.card_styles.info",
      "label": "t:sections.collage-with-video.settings.card_styles.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": false,
      "label": "t:sections.main-collection-product-grid.settings.enable_quick_buy.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
          "type": "text",
          "id": "custom_class",
          "label": "t:sections.main-product.blocks.icon_with_text.settings.custom_class.label",
          "info": "t:sections.main-product.blocks.icon_with_text.settings.custom_class.info"
   }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "t:sections.collage-with-video.blocks.image.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.collage-with-video.blocks.image.settings.image.label"
        }
      ]
    },
    {
      "type": "video",
      "name": "t:sections.collage-with-video.blocks.video.name",
      "settings": [
       {
        "type": "text",
        "id": "video_url",
        "label": "Background video link",
        "default": "https://cdn.shopify.com/s/files/1/0451/1377/0141/files/uniform_web_1.mp4?v=1597050823",
        "info": "Supports only Shopify link.[Learn more](http://expertsinshopify.com/)"
      }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "t:sections.collage-with-video.presets.name",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
